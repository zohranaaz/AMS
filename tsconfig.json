{
    "compilerOptions": {
        "target": "es6",
        "rootDir": "./src/",
        "outDir": "./build/",
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "sourceMap": true,
        "inlineSources": true,
        "experimentalDecorators":true
    },
    "include": [        
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}